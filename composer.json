{
    "name": "drevops/shell-variables-extractor",
    "type": "library",
    "description": "Extracts shell variables from one or multiple files in a directory.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "homepage": "https://drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/drevops/shell-variables-extractor",
    "support": {
        "issues": "https://github.com/drevops/shell-variables-extractor/issues",
        "source": "https://github.com/drevops/shell-variables-extractor"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -s --standard=Drupal shell-variable-extractor.php tests",
        "lint:fix": "vendor/bin/phpcbf -s --standard=Drupal shell-variable-extractor.php tests",
        "test": "phpunit tests/phpunit"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "drupal/coder": "^8.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Drevops\\Tests\\": "tests/phpunit/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
